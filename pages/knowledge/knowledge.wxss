/**index.wxss**/
.main{
  padding: 15rpx 24rpx;
}

  /*知识库  */
.knowledge-item{
  position: relative;
  padding: 14rpx 36rpx 15rpx 25rpx;
  box-sizing: border-box;
  margin-bottom: 16rpx;
  height: 236rpx;
  background: #FFFFFF;
  border-radius:10px;
  box-shadow:2px 0px 6px rgba(88,88,88,0.14);
  overflow: hidden
}


.knowledge-item .konwledge-title{
  margin-bottom: 10rpx;
  max-height:40rpx;
  height: 40rpx;
  color:#333333;
  font-size:34rpx;
  line-height:40rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}

.knowledge-item .knowledge-content{
  margin-bottom: 10rpx;
  font-size:28rpx;
  height: 128rpx;
  line-height:33rpx;
  text-indent:44rpx;
  color:#3E3E3E;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:4;
}

.knowledge-item .knowledge-time{
  position: absolute;
  right: 36rpx;
  bottom: 6rpx;
  font-size:22rpx;
  color:#38649D;
}


.knowledge-item  .knowledge-type1,
.knowledge-item  .knowledge-type2{
  position: absolute;
  left: 25rpx;
  bottom: 4rpx;  
  width: 150rpx;
  color: #FFFFFF;
  border-radius: 5px;
  font-size: 24rpx;
  text-align: center;
  font-weight: 800;
  margin-right: 20rpx;
}
.knowledge-item  .knowledge-type1{
  color: rgba(109, 166, 238, 0.8);
}

.knowledge-item  .knowledge-type2{
 color: rgba(172, 17, 17, 0.8);
}

/* 举报入口 */
.report-entry{
  position: fixed;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 150rpx;
  box-sizing: border-box;
}


.report-entry .report-entry-wrap{
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  background: #FFFFFF;
  z-index: 2;
  padding: 26rpx 0;
  white-space: nowrap;
  overflow-x: auto;
}
.report-entry .entry-title-text{
  position: absolute;
  left:12rpx;
  top:7rpx;
  font-size:14rpx;
  color:#FFFFFF;
  z-index:10;
  width:45rpx;
  letter-spacing:6rpx;

}

.report-entry .report-entry-wrap::after{
  position: absolute;
  content: '';
  left: 0;
  top: 0;
  display: block;
  border: 50rpx solid #124C97 ; 
  border-color: #124C97 transparent transparent #124C97;
}

.report-entry-item{
  display: inline-block;
  width: 100rpx;
  text-align: center;
  margin-right: 74rpx;
}
.report-entry-item:first-child{
  margin-left: 64rpx;
}

.report-entry-item image{
  width: 58rpx;
  height: 58rpx;
}

.report-entry-item text{
  display: block;
  font-size: 24rpx;
  color: #292929;
  line-height: 24rpx;
  letter-spacing: 2rpx;
}

.entry-btn{
  position: fixed;
  z-index: 999;
  bottom: 38rpx;
  right: 0;
  padding-top: 13rpx;
  width: 42rpx;
  height: 72rpx;
  border-radius: 10rpx 0 0 10rpx;
  background: #124C97;
  box-sizing: border-box;
}

.entry-btn .circle{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #FFFFFF;
  margin: 0 auto 8rpx;
}

.entry-btn .circle:last-child{
   margin-bottom: 0;
}

/* 举报说明 */
#reportNote{
  position: fixed;
  right: 0;
  top: 20rpx;
  display: flex;
  height: 40rpx;
  background: #124C97;
  padding: 10rpx;
  border-radius: 10rpx 0 0 10rpx;
  justify-content: center;
  align-items: center
}

#reportNote .text{
  font-size:24rpx;
  color: #FFFFFF;
}

#reportNote .control{
  width: 24rpx;  
  height: 24rpx;
  padding: 6rpx;
  margin-right: 4rpx;
}